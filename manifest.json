{
  "manifest_version": 3,
  "name": "Fraud-Shield Site Scanner",
  "version": "1.0.0",
  "description": "Automatically scans the current site content with Fraud-Shield backend.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://your-production-backend.example/*"
  ],
  "action": {
    "default_title": "Scan this site with Fraud-Shield"
  }
}
